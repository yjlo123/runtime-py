class Point {
    x = 0
    y = 0

    func init(x, y) {
        this.x = x
        this.y = y
    }

    func toStr() {
        return "(" + this.x + ", " + this.y + ")"
    }
}

p1 = Point(23, 76)
print(p1.toStr())

p2 = Point()  // use default constructor
p2.x = 8
print(p2.toStr())

